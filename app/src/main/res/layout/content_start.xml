<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    tools:context="com.anxpp.one.activity.StartActivity"
    tools:showIn="@layout/activity_start">

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmer_tv1"
        android:text="输入一个"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textColor="#71f195"
        android:textSize="20sp"/>

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmer_tv2"
        android:text="你喜欢的"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:layout_below="@id/shimmer_tv1"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"/>

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmer_tv3"
        android:text="独一无二的"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:layout_below="@id/shimmer_tv2"
        android:gravity="center"
        android:textColor="#f16413"
        android:textSize="48sp"/>

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/shimmer_tv4"
        android:text="昵称"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:layout_below="@id/shimmer_tv3"
        android:gravity="center"
        android:textColor="#fa101f"
        android:textSize="32sp"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="32dp"
        android:padding="8dp"
        app:met_baseColor="@color/white"
        app:met_primaryColor="#982360"
        app:met_errorColor="#ddaa00"
        app:met_singleLineEllipsis="true"
        app:met_clearButton="true"
        app:met_minCharacters="5"
        app:met_maxCharacters="10"
        android:layout_below="@id/shimmer_tv4"
        android:hint="......"/>

    <com.dd.CircularProgressButton
        android:gravity="center"
        android:id="@+id/btnWithText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:padding="8dp"
        android:layout_below="@id/editUser"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cpb_textComplete="设置成功"
        app:cpb_textError="网络错误"
        app:cpb_cornerRadius="48dp"
        app:cpb_textIdle="提交一下试试" />

    <!--<me.gujun.android.taggroup.TagGroup-->
    <!--android:id="@+id/tag_group"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_width="wrap_content"/>-->

</RelativeLayout>
